<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.0" author="tamerlan.khutuev">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="now()">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="now()">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.1.0" author="tamerlan.khutuev">
        <createTable tableName="projects">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="descriptions" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.2.0" author="tamerlan.khutuev">
        <createTable tableName="tasks">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" />
            </column>

            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" />
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.3.0" author="tamerlan.khutuev">
        <createTable tableName="time_slice">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" />
            </column>

            <column name="start_time_point" type="date">
               <constraints nullable="false" unique="false"/>
            </column>

            <column name="end_time_point" type="date">
                <constraints nullable="true" unique="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.4.0" author="tamerlan.khutuev">
        <addForeignKeyConstraint baseTableName="projects"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_projects_projects"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 />
    </changeSet>

    <changeSet id="1.5.0" author="tamerlan.khutuev">
        <addForeignKeyConstraint baseTableName="tasks"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_projects_projects"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1.6.0" author="tamerlan.knutuev">
        <addForeignKeyConstraint baseTableName="time_slice"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_time_slice_time_slice"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>